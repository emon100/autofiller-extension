{
  "name": "autofiller-claude",
  "version": "1.0.0",
  "description": "Chrome extension for auto-filling job application forms",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && BUILD_TARGET=content vite build",
    "build:prod": "tsc && BUILD_MODE=production vite build && BUILD_MODE=production BUILD_TARGET=content vite build",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.55.0",
    "happy-dom": "^12.10.3",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "json-repair-js": "^1.0.0",
    "lucide-react": "^0.562.0",
    "mammoth": "^1.6.0",
    "pdfjs-dist": "^4.0.379",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grab": "^0.0.98"
  }
}
